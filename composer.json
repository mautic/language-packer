{
  "name": "mautic/language-packager",
  "description": "Creates language packages for Mautic releases",
  "license": "GPL-2.0+",
  "type": "project",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-zip": "*",
    "guzzlehttp/guzzle": "^7.5",
    "http-interop/http-factory-guzzle": "^1.2",
    "mautic/transifex": "^5.0",
    "symfony/console": "7.4.*",
    "symfony/dotenv": "7.4.*",
    "symfony/flex": "^2",
    "symfony/framework-bundle": "7.4.*",
    "symfony/runtime": "7.4.*",
    "symfony/yaml": "7.4.*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.39",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.5",
    "rector/rector": "^2.3",
    "symfony/maker-bundle": "^1.48"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "symfony/flex": true,
      "symfony/runtime": true
    },
    "bin-dir": "bin",
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd",
      "php -r \"if(file_exists('./.git')&&file_exists('./git-hooks/pre-commit'.(PHP_OS==='WINNT'?'.win':''))){copy('./git-hooks/pre-commit'.(PHP_OS==='WINNT'?'.win':''),'./.git/hooks/pre-commit');}if(file_exists('./.git')&&file_exists('./git-hooks/post-checkout'.(PHP_OS==='WINNT'?'.win':''))){copy('./git-hooks/post-checkout'.(PHP_OS==='WINNT'?'.win':''),'./.git/hooks/post-checkout');}\"": "script",
      "php -r \"if((PHP_OS!=='WINNT')&&file_exists('./.git/hooks/pre-commit')){chmod('./.git/hooks/pre-commit',0755);}if((PHP_OS!=='WINNT')&&file_exists('./.git/hooks/post-checkout')){chmod('./.git/hooks/post-checkout',0755);}\"": "script"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "test": "bin/phpunit",
    "phpstan": "php -d memory_limit=1G bin/phpstan analyse",
    "cs": "PHP_CS_FIXER_IGNORE_ENV=1 bin/php-cs-fixer fix -v --dry-run --diff",
    "fixcs": "PHP_CS_FIXER_IGNORE_ENV=1 bin/php-cs-fixer fix -v --using-cache=no",
    "rector": "bin/rector process"
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "7.4.*"
    }
  }
}
